# ============================================================================
# REQUIRED API KEYS
# ============================================================================

# Google Gemini API Key (REQUIRED)
# Get from: https://aistudio.google.com/app/apikey
# Used for: AI agent core functionality
GOOGLE_API_KEY=your_google_api_key_here

# Gemini Model (REQUIRED)
# Options: gemini-2.0-flash-exp,gemini-2.5-pro,gemini-2.5-flash
# Recommended: gemini-2.5-pro (fastest, latest features) or gemini-3-pro-preview for latest features
GEMINI_MODEL=gemini-3-pro-preview

# ============================================================================
# OPTIONAL API KEYS (for specific features)
# ============================================================================

# Serper API Key (OPTIONAL - for web search)
# Get from: https://serper.dev/
# Used for: Real-time web search functionality
# Note: Can also use SERPAPI_API_KEY for backward compatibility
SERPER_API_KEY=your_serper_api_key_here

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Debug Mode (OPTIONAL)
# Set to True for development, False for production
DEBUG=True

# Server Port (OPTIONAL)
# Default: 8000 for FastAPI, 8501 for Streamlit
PORT=8000

# ============================================================================
# DATABASE SETTINGS (OPTIONAL - if using database)
# ============================================================================

# PostgreSQL Configuration
# DB_HOST=localhost
# DB_NAME=agent_db
# DB_USER=postgres
# DB_PASSWORD=your_db_password
# DB_PORT=5432

# ============================================================================
# ADDITIONAL API KEYS (add as needed)
# ============================================================================

# OpenWeatherMap API (for weather features)
# OPENWEATHER_API_KEY=your_openweather_key

# SendGrid API (for email features)
# SENDGRID_API_KEY=your_sendgrid_key

# Stripe API (for payment features)
# STRIPE_API_KEY=your_stripe_key
